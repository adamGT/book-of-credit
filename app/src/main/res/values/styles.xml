<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="popupMenuStyle">@style/Widget.MaterialComponents.PopupMenu</item>
        <item name="actionOverflowMenuStyle">@style/Widget.MaterialComponents.PopupMenu.Overflow
        </item>
        <item name="materialAlertDialogTheme">@style/MaterialAlertDialog</item>
        <item name="android:popupMenuStyle">@style/Widget.MaterialComponents.PopupMenu</item>
        <item name="android:typeface">serif</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>


    <!-- Launcher style -->
    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>


    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="ActionBar" parent="@style/Widget.MaterialComponents.ActionBar.Solid">
        <item name="android:background">@color/white</item>
        <item name="backgroundTint">@color/white</item>
    </style>


    <!-- Material alert dialog title style -->
    <style name="MaterialAlertTextAppearance" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/DarkTextColor</item>
    </style>


    <!-- Material alert dialog style -->
    <style name="MaterialAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="dialogCornerRadius">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertTextAppearance</item>
    </style>


    <!-- Buttons styles -->
    <style name="bado.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:radius">16dp</item>
        <item name="elevation">5dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Login btn -->
    <style name="badowhite.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:radius">16dp</item>
        <item name="elevation">5dp</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <!--    textInputLayout hint style-->
    <style name="TexInput" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Bottom navigation style -->
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
    </style>


    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">9sp</item>
        <item name="android:textStyle">bold</item>
        <item name="labelVisibilityMode">labeled</item>

    </style>

    <!-- Toolbar Style -->
    <style name="Widget.bado.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:theme">@style/AppTheme</item>
        <item name="android:background">@color/white</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/Toolbar.TitleText</item>
        <item name="android:paddingRight">10dp</item>
    </style>


    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="searchViewStyle">@style/SearchViewTheme</item>
    </style>

    <!--style for search view-->
    <style name="SearchViewTheme" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>

</resources>
