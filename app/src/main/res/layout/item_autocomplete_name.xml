<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/autocomplete_profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:src="@color/custom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/autocomplete_initial"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="A"
        android:textSize="21sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/autocomplete_profile"
        app:layout_constraintEnd_toEndOf="@+id/autocomplete_profile"
        app:layout_constraintStart_toStartOf="@+id/autocomplete_profile"
        app:layout_constraintTop_toTopOf="@+id/autocomplete_profile" />

    <TextView
        android:id="@+id/autocomplete_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:textColor="@color/DarkTextColor"
        android:text="Name of User"
        app:layout_constraintBottom_toBottomOf="@+id/autocomplete_initial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/autocomplete_initial"
        app:layout_constraintTop_toTopOf="@+id/autocomplete_initial" />

</androidx.constraintlayout.widget.ConstraintLayout>